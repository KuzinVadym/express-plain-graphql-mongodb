{
    "compilerOptions": {
      "outDir": "dist",
      "rootDir": "src",
      "target": "es2017",
      "lib": [
        "es2016",
        "es2017",
        "esnext",
        "dom"
      ],
      "module": "commonjs",
      "moduleResolution": "node",
      "declaration": true,
      "declarationMap": true,
      "composite": true,
      "sourceMap": true,
      "noUnusedLocals": false,
      "noUnusedParameters": false,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "resolveJsonModule": true,
      "typeRoots": [
        "node_modules/@types",
        "../node_modules/@types"
      ]
    },
    "include": ["src/**/*"],
    "exclude": [
      "__tests__",
      "node_modules",
      "src/**/*.test.ts",
      ".idea"
    ]
  }
  